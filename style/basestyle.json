{
    "version": 8,
    "name": "Rusic Tiles Demo Style",
    "glyphs": "https://tiles.openstreetmap.us/fonts/{fontstack}/{range}.pbf",
    "sources": {
       "beefsteak": {
            "type": "vector",
            "url": "http://159.69.74.234/beefsteak"
        }
    },
    "sprite": "/style/sprites/themapis",
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint": {
                "background-color": "#fff"
            }
        },
        {
            "id": "barrier-fill",
            "source": "beefsteak",
            "source-layer": "area",
            "type": "fill",
            "filter": [
                "any",
                ["has", "barrier"],
                ["in", ["get", "man_made"], ["literal", ["breakwater", "dyke", "groyne"]]],
                ["in", ["get", "waterway"], ["literal", ["dam", "weir"]]]
            ],
            "paint": {
                "fill-color": "#D6CCCF"
            }
        },
        {
            "id": "coastline",
            "source": "beefsteak",
            "source-layer": "line",
            "type": "line",
            "filter": [
                "all",
                ["==", ["get", "natural"], "coastline"],
                ["!", ["==", ["get", "maritime"], "yes"]
            ]],
            "layout": {
                "line-join": "round"
            },
            "paint": {
                "line-color": "#BFD3E0",
                "line-width": 0.4
            }
        },
        {
            "id": "route",
            "source": "beefsteak",
            "source-layer": "line",
            "type": "line",
            "filter": ["==", ["get", "route"], "ferry"],
            "paint": {
                "line-color": "#7EC2FF",
                "line-dasharray": [4, 4]
            }
        },
        {
            "id": "path-route",
            "source": "beefsteak",
            "source-layer": "line",
            "type": "line",
            "filter": [
                "all",
                [
                    "any",
                    ["in", "┃hiking┃", ["get", "r.route"]],
                    ["in", "┃foot┃", ["get", "r.route"]],
                    ["in", "┃bicycle┃", ["get", "r.route"]],
                    ["in", "┃horse┃", ["get", "r.route"]],
                    ["in", "┃mtb┃", ["get", "r.route"]]
                ],
                ["!", ["in", "┃road┃", ["get", "r.route"]]],
                ["has", "highway"]
            ],
            "layout": {
                "line-join": "round",
                "line-cap": "round"
            },
            "paint": {
                "line-width": [
                    "interpolate", ["linear"], ["zoom"],
                    6, 1,
                    18, 2
                ],
                "line-color": "#729A6A",
                "line-dasharray": [0.5,2]
            },
            "maxzoom": 12
        },
        {
            "id": "road-route",
            "source": "beefsteak",
            "source-layer": "line",
            "type": "line",
            "filter": [
                "all",
                ["in", "┃road┃", ["get", "r.route"]],
                ["has", "highway"]
            ],
            "layout": {
                "line-join": "round",
                "line-cap": "round"
            },
            "paint": {
                "line-width": [
                    "interpolate", ["linear"], ["zoom"],
                    6, [
                        "case",
                        ["in", ["get", "highway"], ["literal", ["motorway", "motorway_link", "trunk", "trunk_link"]]], 1.5,
                        1
                    ],
                    18, [
                        "case",
                        ["in", ["get", "highway"], ["literal", ["motorway", "motorway_link", "trunk", "trunk_link"]]], 3.3,
                        0.85
                    ]
                ],
                "line-color": "#F7CF8D"
            },
            "maxzoom": 12
        },
        {
            "id": "boundary-casing",
            "source": "beefsteak",
            "source-layer": "line",
            "type": "line",
            "filter": [
                "all",
                ["in", "┃administrative┃", ["get", "r.boundary"]],
                [
                    "any",
                    ["in", "┃2┃", ["get", "r.admin_level"]],
                    ["in", "┃4┃", ["get", "r.admin_level"]],
                    ["in", "┃6┃", ["get", "r.admin_level"]],
                    ["in", "┃8┃", ["get", "r.admin_level"]]
                ],
                ["!", ["==", ["get", "maritime"], "yes"]]
            ],
            "paint": {
                "line-color": "white",
                "line-opacity": 0.5,
                "line-width": [
                    "case",
                    [
                        "any",
                        ["in", "┃6┃", ["get", "r.admin_level"]],
                        ["in", "┃8┃", ["get", "r.admin_level"]]
                    ], 2,
                    ["in", "┃4┃", ["get", "r.admin_level"]], 2.5,
                    3
                ]
            }
        },
        {
            "id": "boundary",
            "source": "beefsteak",
            "source-layer": "line",
            "type": "line",
            "filter": [
                "all",
                ["in", "┃administrative┃", ["get", "r.boundary"]],
                [
                    "any",
                    ["in", "┃2┃", ["get", "r.admin_level"]],
                    ["in", "┃4┃", ["get", "r.admin_level"]],
                    ["in", "┃6┃", ["get", "r.admin_level"]],
                    ["in", "┃8┃", ["get", "r.admin_level"]]
                ],
                ["!", ["==", ["get", "maritime"], "yes"]]
            ],
            "paint": {
                "line-color": "#ccc",
                "line-width": [
                    "case",
                    ["in", "┃2┃", ["get", "r.admin_level"]], 1.75,
                    ["in", "┃4┃", ["get", "r.admin_level"]], 1.5,
                    1
                ],
                "line-dasharray": [
                    "case",
                    ["in", "┃2┃", ["get", "r.admin_level"]], ["literal", [10, 1, 2, 1]],
                    ["in", "┃4┃", ["get", "r.admin_level"]], ["literal", [6, 1, 2, 1, 2, 1]],
                    ["literal", [6, 3, 3, 3]]
                ]
            }
        },
        {
            "id": "line-label",
            "source": "beefsteak",
            "source-layer": "line",
            "type": "symbol",
            "layout": {
                "symbol-placement": "line",
                "text-size": 10.5,
                "text-font": [
                    "case",
                    [
                        "all",
                        [
                            "any",
                            ["has", "waterway"],
                            ["has", "natural"]
                        ],
                        ["!", ["==", ["get", "waterway"], "fairway"]]
                    ], ["literal", ["Noto Serif Italic"]],
                    ["literal", ["Noto Sans Regular"]]
                ],
                "text-field": ["coalesce", ["get", "name"], ["get", "ref"]]
            },
            "paint": {
                "text-color": [
                    "case",
                    ["has", "waterway"], "#114566",
                    "Black"
                ],
                "text-halo-color": "#fff",
                "text-halo-width": 1
            }
        },
        {
            "id": "point-label",
            "source": "beefsteak",
            "source-layer": "point",
            "type": "symbol",
            "filter": [
                "any",
                [
                    "all",
                    [
                        "any",
                        [
                            "all",
                            ["in", ["get", "admin_level"], ["literal", ["2", "4", "5", "8"]]],
                            ["in", ["get", "boundary"], ["literal", ["administrative"]]]
                        ],
                        ["in", ["get", "place"], ["literal", ["city", "village", "town", "hamlet"]]]
                    ],
                    [
                        "any",
                        ["in", ["get", "admin_level"], ["literal", ["2", "4"]]],
                        ["in", ["get", "capital"], ["literal", ["2", "4"]]],
                        [
                            "all",
                            [">=", ["zoom"], 5],
                            [">=", ["to-number", ["get", "population"], "0"], 100000]
                        ],
                        [
                            "all",
                            [">=", ["zoom"], 8],
                            [">=", ["to-number", ["get", "population"], "0"], 50000]
                        ],
                        [">=", ["zoom"], 10],
                        [">=", ["to-number", ["get", "population"], "0"], 1000000]
                    ]
                ],
                [
                    "any",
                    ["in", ["get", "place"], ["literal", ["ocean", "sea", "island", "islet", "archipelago"]]],
                    ["in", ["get", "natural"], ["literal", ["bay", "desert", "mountain_range", "peninsula", "strait", "valley", "water"]]]
                ],
                ["==", ["get", "boundary"], "aboriginal_lands"],
                [
                    "any",
                    ["in", ["get", "boundary"], ["literal", ["protected_area"]]],
                    ["in", ["get", "leisure"], ["literal", ["nature_reserve", "park"]]]
                ],
                [
                    "any",
                    ["==", ["get", "landuse"], "military"],
                    ["==", ["get", "military"], "base"]
                ],
                [
                    "any",
                    ["has", "education"],
                    ["in", ["get", "amenity"], ["literal", ["school", "college", "university"]]],
                    ["in", ["get", "landuse"], ["literal", ["education"]]]
                ],
                [
                    "any",
                    ["==", ["get", "public_transport"], "station"],
                    ["==", ["get", "aeroway"], "aerodrome"],
                    ["==", ["get", "railway"], "station"]
                ]
            ],
            "layout": {
                "symbol-placement": "point",
                "symbol-sort-key": ["-", ["coalesce", ["get", "c.area"], 0]],
                "text-size":[
                    "case",
                    [
                        "all",
                        ["in", ["get", "boundary"], ["literal", ["administrative"]]],
                        ["in", ["get", "admin_level"], ["literal", ["2", "4"]]]
                    ], 11,
                    ["any",["in", ["get", "place"], ["literal", ["ocean", "sea", "island", "islet", "archipelago"]]],["in", ["get", "natural"], ["literal", ["bay", "desert", "mountain_range", "peninsula", "strait", "valley", "water"]]]], 10,
                    11
                ],
                "text-transform":[
                    "case",
                    [
                        "all",
                        ["in", ["get", "boundary"], ["literal", ["administrative"]]],
                        ["in", ["get", "admin_level"], ["literal", ["2", "4"]]]
                    ], "uppercase",
                    ["any",["in", ["get", "place"], ["literal", ["ocean", "sea", "island", "islet", "archipelago"]]],["in", ["get", "natural"], ["literal", ["bay", "desert", "mountain_range", "peninsula", "strait", "valley", "water"]]]], "uppercase",
                    "none"
                ],
                "text-font":[
                    "case",
                    [
                        "all",
                        ["in", ["get", "boundary"], ["literal", ["administrative"]]],
                        ["in", ["get", "admin_level"], ["literal", ["2", "4"]]]
                    ], ["literal", ["Noto Sans Medium"]],
                    ["any",["in", ["get", "place"], ["literal", ["city"]]],["in", ["get", "boundary"], ["literal", ["administrative"]]]], ["literal", ["Noto Sans Bold"]],
                    ["any",["in", ["get", "place"], ["literal", ["ocean", "sea", "island", "islet", "archipelago"]]],["in", ["get", "natural"], ["literal", ["bay", "desert", "mountain_range", "peninsula", "strait", "valley", "water"]]]], ["literal", ["Noto Serif Medium Italic"]],
                    ["literal", ["Noto Sans Medium"]]
                ],
                "text-letter-spacing":[
                    "case",
                    [
                        "all",
                        ["in", ["get", "boundary"], ["literal", ["administrative"]]],
                        ["in", ["get", "admin_level"], ["literal", ["2", "4"]]]
                    ], 0.15,
                    ["any",["in", ["get", "place"], ["literal", ["ocean", "sea", "island", "islet", "archipelago"]]],["in", ["get", "natural"], ["literal", ["bay", "desert", "mountain_range", "peninsula", "strait", "valley", "water"]]]], 0.1,
                    0
                ],
                "text-field": ["coalesce", ["get", "name"], ["get", "ref"]]
            },
            "paint": {
                "text-color":[
                    "case",
                    [
                        "all",
                        ["in", ["get", "boundary"], ["literal", ["administrative"]]],
                        ["in", ["get", "admin_level"], ["literal", ["2", "4"]]]
                    ], "#111",
                    ["any",["in", ["get", "place"], ["literal", ["ocean", "sea"]]],["in", ["get", "natural"], ["literal", ["bay", "strait", "water"]]]], "#114566",
                    "#555"
                ],
                "text-halo-color": "#fff",
                "text-halo-width": 1
            }
        }
    ]
}